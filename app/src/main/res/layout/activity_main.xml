<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonNewsfeed"
                style="@style/style_btn_main"
                android:text="@string/newsfeed_btn"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="219dp" />


            <Button
                android:id="@+id/buttonFriends"
                style="@style/style_btn_main"
                android:text="@string/friends_btn"
                android:background="@color/colorWhite"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="158dp" />

            <Button
                android:id="@+id/buttonGroups"
                style="@style/style_btn_main"
                android:background="@drawable/btn_corners_bottom"
                android:text="@string/groups_btn" />

            <Button
                android:id="@+id/buttonPhotos"
                style="@style/style_btn_main"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_corners"
                android:text="@string/photos_btn" />

            <Button
                android:id="@+id/buttonVideos"
                style="@style/style_btn_main"
                android:layout_marginTop="16dp"
                android:text="@string/videos_btn" />

            <Button
                android:id="@+id/buttonBookmarks"
                style="@style/style_btn_main"
                android:layout_marginBottom="32dp"
                android:background="@drawable/btn_corners_bottom"
                android:text="@string/bookmarks_btn" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>